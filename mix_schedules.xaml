<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mix Schedules"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        Width="600"
        MaxHeight="800"
        Background="#FFF9F9F9"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Mix Schedules"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#222222"
                       Margin="0,0,0,2"/>
            <TextBlock Text="View and edit planting mix schedule tables."
                       FontSize="12"
                       Foreground="#666666"/>
        </StackPanel>

        <!-- Content -->
        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#DDDDDD"
                CornerRadius="6"
                Background="White">
            <ScrollViewer x:Name="MainScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Margin="4">
                <StackPanel x:Name="MixStackPanel"
                            Orientation="Vertical"
                            Margin="0"/>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="Changes are only written to Revit when you click Apply."
                       VerticalAlignment="Center"
                       Foreground="#666666"
                       FontSize="11"
                       Margin="0,0,10,0"/>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="ApplyButton"
                        Content="Apply"
                        Width="80"
                        Margin="4,0,0,0"
                        Padding="10,4"
                        IsDefault="True"/>
                <Button x:Name="CloseButton"
                        Content="Close"
                        Width="80"
                        Margin="4,0,0,0"
                        Padding="10,4"
                        IsCancel="True"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
